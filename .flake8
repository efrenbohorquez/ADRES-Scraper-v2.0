# =============================================================================
# Configuración de Flake8 para el Proyecto de Web Scraping ADRES
# =============================================================================

[flake8]
# Longitud máxima de línea
max-line-length = 88

# Archivos y directorios a excluir
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    venv,
    env,
    .venv,
    .env

# Códigos de error a ignorar (específicos para el contexto educativo)
ignore = 
    # E203: Whitespace before ':'  (conflicto con Black formatter)
    E203,
    # W503: Line break before binary operator (estilo preferido)
    W503,
    # F401: Imported but unused (común en ejemplos educativos)
    # F401,

# Códigos de error a seleccionar específicamente
select = 
    # Errores de sintaxis
    E9,F63,F7,F82
    # Importaciones
    F401,F811,F821,F822,F823,F831,F841
    # Complejidad ciclomática
    C90

# Complejidad máxima permitida por función
max-complexity = 10

# Mostrar estadísticas de errores
statistics = True
count = True

# Configuración por tipo de archivo
per-file-ignores =
    # En archivos __init__.py permitir importaciones no usadas
    __init__.py:F401
    # En archivos de test permitir mayor flexibilidad
    tests/*:F401,F811
    # En ejemplos educativos permitir algunas excepciones
    ejemplos/*:F401,F841